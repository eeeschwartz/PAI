# MCP Server Environment Variables
# Copy this file to ~/.env and fill in your actual values
# This file will be mounted read-only into the container

# API Keys (only add what you need)
OPENAI_API_KEY=your_openai_key_here
ANTHROPIC_API_KEY=your_anthropic_key_here
GITHUB_TOKEN=your_github_token_here

# Database Connections (if using database MCP servers)
DATABASE_URL=postgresql://user:password@localhost:5432/dbname
SQLITE_DB_PATH=/workspace/data/app.db

# Cloud Services
AWS_ACCESS_KEY_ID=your_aws_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_here
AWS_REGION=us-west-2

GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# MCP Server Specific Settings
MCP_FILESYSTEM_ROOT=/workspace
MCP_BROWSER_HEADLESS=false
MCP_LOG_LEVEL=info

# Security Settings
MCP_RATE_LIMIT=100
MCP_TIMEOUT_MS=30000
MCP_MAX_FILE_SIZE=10485760  # 10MB